<div class = "container-fluid">
  <%= render 'shared/menu' %>
</div>
<div class = "container-fluid mt-3">
  <span><b>Trabajador: </b><%= @trabajador.nombres %></span>
</div>
<div class="container-fluid d-flex flex-column align-items-center gp-3">
<h1> Conceptos Actuales </h1>
<table class="table">
       
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Código Concepto</th>
      <th scope="col">Descripción Concepto</th>
      <th scope="col">Monto Concepto</th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
    <% @conceptos.each do |concepto| %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= concepto.CO_CONCEPTO %></td>
      <td><%= concepto.DESCRIPCION_CO %></td>
      <td><%= concepto.MO_CONCEP %></td>
    </tr>
  </tbody>
  <% i += 1 %>
<% end %>
</table>
</div>
