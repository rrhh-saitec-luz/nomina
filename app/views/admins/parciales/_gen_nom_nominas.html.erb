<%= content_tag :div do %>
  <%= form.label :tpn, "Tipo nomina", class: "form-label" %>
  <%= form.select :tpn,
      options_from_collection_for_select(nomina, :tipo_nomina, :descripcion),
      { include_blank: "Seleccione nomina", required: true, disabled: true },
      class: "form-select",
      data: {admin_target: "tipoNomina",
             action: "change->admin#nominaEspecifica"} %>
<% end %>  
<%= content_tag :div do %>
  <%= form.label :tpns, 'Nomina específica',
                 class: 'form-label' %>
  <%= form.select :tpns,
                  [],
                  { prompt: "Nómina específica",
                  required: true },
                  data: {admin_target: "nominaEspecifica"},
                  class: 'form-select' %> 
<% end %>
