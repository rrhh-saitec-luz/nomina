<%= content_tag :div, class: "container-fluid" do %>
<% end %>
<%= content_tag :div,
                class: "container-fluid border mt-2 d-flex justify-content-center" do %> 
  <%= form_with model: @variacion,
                data: {controller: "varconcepto"},
                local: true,
                class:"d-flex flex-column col-11 gap-2 mt-2" do |form| %>
    <%= render "cabecera_variacion", trab: @trab %>
    <%= render "accion", form: form %>
    <%= render "seleccion_concepto", form: form, con: @con %>
    <%= render "beneficiario", form: form %>
    <%= render "tipo_nomina", form: form, tipo_nomina: @tipo_nomina %>
    <%= render "nomina_especifica", form: form %>
    <%= render "fechas_nomina", form: form %>
    <%= render "montos", form: form %>
    <%= form.hidden_field :ce_trabajador, value: @trab.ce_trabajador %>
    <%= form.hidden_field :co_ubicacion, value: @trab.co_ubicacion %>
    <%= form.hidden_field :tipopersonal, value: @trab.tipopersonal %>
    <%= form.hidden_field :descripcion_tp, value: @trab.descripcion_tp %>
    <%= form.hidden_field :id_trabajador, value: @trab.id %>
    <%= form.hidden_field :usuario, value: current_user.nombre %>
    <%= form.hidden_field :in_nomina, value: @estatus %>
    <%= form.submit "Crear", class: "btn btn-secondary col-1 align-self-center" %>
  <% end %>
<% end %>
