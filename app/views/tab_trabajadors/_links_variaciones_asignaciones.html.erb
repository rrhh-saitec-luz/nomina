<% opciones.each do |opcion| %>
  <% if opcion.eql?('Detalle asignaciones') %>
    <%= link_to opcion, pagos_show_path(
      CE_TRABAJADOR: render_trabajador.ce_trabajador,
      CO_UBICACION: render_trabajador.co_ubicacion,
      TIPOPERSONAL: render_trabajador.tipopersonal,
      id: render_trabajador.id 
    ) %>
  <% else %>
    <%= link_to opcion, pagos_variaciones_path(
      CE_TRABAJADOR: render_trabajador.ce_trabajador,
      CO_UBICACION: render_trabajador.co_ubicacion,
      TIPOPERSONAL: render_trabajador.tipopersonal,
      id: render_trabajador.id 
      ) %>
  <% end %>
<% end %>
