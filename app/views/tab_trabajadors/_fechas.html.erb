<% fechas.each do |key, value| %>
  <li class="list-group-item d-flex flex-wrap">
    <div class="flex-grow-1">
      <h4 class="card-text"><span class="badge bg-secondary"><%= key %></span></h4>
    </div>
      <p>
        <% if value.nil? %>
          <%= '00/00/000' %>
        <% else %>
          <%= value.strftime('%d/%m/%Y') %>
        <% end %>
      </p>
  </li>
<% end %>
